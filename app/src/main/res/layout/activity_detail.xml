<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="model"
            type="me.cpele.watchbee.ui.DetailViewModel"
            />

        <variable
            name="listener"
            type="me.cpele.watchbee.ui.DetailActivity"
            />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/detail_title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@{model.goalTiming.goal.title}"
            app:layout_constraintBottom_toTopOf="@+id/detail_timer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside"
            tools:text="Goal title"
            />

        <TextView
            android:id="@+id/detail_timer"
            style="@style/TextAppearance.AppCompat.Display2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.goalTiming.stopwatch.format()}"
            app:layout_constraintBottom_toTopOf="@+id/detail_button_start_stop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_title"
            tools:text="00:24:02"
            />

        <ImageButton
            android:id="@+id/detail_button_cancel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/detail_cancel"
            android:src="@drawable/ic_clear_black_24dp"
            app:layout_constraintBottom_toBottomOf="@id/detail_button_start_stop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/detail_button_start_stop"
            app:layout_constraintTop_toTopOf="@id/detail_button_start_stop"
            />

        <ImageButton
            android:id="@+id/detail_button_start_stop"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/detail_start"
            android:onClick="@{() -> model.toggleStopwatch()}"
            android:src="@{model.startStopDrawable(context)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/detail_button_cancel"
            app:layout_constraintRight_toLeftOf="@id/detail_button_submit"
            app:layout_constraintTop_toBottomOf="@id/detail_timer"
            />

        <ImageButton
            android:id="@+id/detail_button_submit"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/detail_submit"
            android:src="@drawable/ic_done_black_24dp"
            app:layout_constraintBottom_toBottomOf="@id/detail_button_start_stop"
            app:layout_constraintLeft_toRightOf="@id/detail_button_start_stop"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/detail_button_start_stop"
            />

    </android.support.constraint.ConstraintLayout>

</layout>